    <ContentPage x:Name="alarmClockPage"
                 Title="Будильники">
        <ContentPage.Content>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="10*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>

                <BoxView BackgroundColor="AntiqueWhite"  
                         Grid.Row="0" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="3" 
                         VerticalOptions="End" 
                         HorizontalOptions="Fill" 
                         HeightRequest="1" />

                <BoxView BackgroundColor="AntiqueWhite"                     
                         Grid.Row="1" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="3" 
                         Margin="0, 0, 0, -5" 
                         VerticalOptions="End" 
                         HorizontalOptions="Fill"  
                         HeightRequest="1" />

                <BoxView BackgroundColor="AntiqueWhite"                     
                         Grid.Row="2" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="3" 
                         Margin="0, 0, 0, -5" 
                         VerticalOptions="End" 
                         HorizontalOptions="Fill"  
                         HeightRequest="1" />

                <BoxView BackgroundColor="AntiqueWhite"                     
                         Grid.Row="3" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="3" 
                         Margin="0, 0, 0, -5" 
                         VerticalOptions="End" 
                         HorizontalOptions="Fill"  
                         HeightRequest="1" />

                <BoxView BackgroundColor="AntiqueWhite"                     
                         Grid.Row="4" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="3" 
                         Margin="0, 0, 0, -5" 
                         VerticalOptions="End" 
                         HorizontalOptions="Fill"  
                         HeightRequest="1" />

                <BoxView BackgroundColor="AntiqueWhite"                     
                         Grid.Row="5" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="3" 
                         Margin="0, 0, 0, -5" 
                         VerticalOptions="End" 
                         HorizontalOptions="Fill"  
                         HeightRequest="1" />

                <BoxView BackgroundColor="AntiqueWhite"                     
                         Grid.Row="6" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="3" 
                         Margin="0, 0, 0, -5" 
                         VerticalOptions="End" 
                         HorizontalOptions="Fill"  
                         HeightRequest="1" />

                <BoxView BackgroundColor="AntiqueWhite"                     
                         Grid.Row="7" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="3" 
                         Margin="0, 0, 0, -5" 
                         VerticalOptions="End" 
                         HorizontalOptions="Fill"  
                         HeightRequest="1" />

                <Label Text="Настройте будильники-рассветы:" 
                       Grid.Row="0" 
                       Grid.Column="0" 
                       HorizontalTextAlignment="Center" 
                       FontSize="Medium" 
                       VerticalTextAlignment="Center" 
                       Grid.ColumnSpan ="3"/>

                <Label Text="Пн:" 
                       Grid.Row="1"
                       Grid.Column="0" 
                       VerticalTextAlignment="Center" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="Вт:" 
                       Grid.Row="2" 
                       Grid.Column="0" 
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"/>

                <Label Text="Ср:" 
                       Grid.Row="3" 
                       Grid.Column="0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center" />

                <Label Text="Чт:" 
                       Grid.Row="4" 
                       Grid.Column="0" 
                       VerticalTextAlignment="Center" 
                       HorizontalTextAlignment="Center" />

                <Label Text="Пт:" 
                       Grid.Row="5" 
                       Grid.Column="0" 
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"/>

                <Label Text="Сб:" 
                       Grid.Row="6" 
                       Grid.Column="0" 
                       VerticalTextAlignment="Center" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="Вс:" 
                       Grid.Row="7" 
                       Grid.Column="0" 
                       VerticalTextAlignment="Center" 
                       HorizontalTextAlignment="Center"/>

                <Switch x:Name="mondaySwitcher"   
                        Toggled="Switcher_Toggled" 
                        IsToggled="False" 
                        Grid.Row="1"
                        Grid.Column="1" 
                        VerticalOptions="Center" 
                        HorizontalOptions="Center" />

                <Switch x:Name="tuesdaySwitcher" 
                        Toggled="Switcher_Toggled" 
                        IsToggled="False" 
                        Grid.Row="2" Grid.Column="1"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center"/>

                <Switch x:Name="wednesdaySwitcher" 
                        Toggled="Switcher_Toggled" 
                        IsToggled="False" 
                        Grid.Row="3" Grid.Column="1"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"/>

                <Switch x:Name="thursdaySwitcher"
                        Toggled="Switcher_Toggled" 
                        IsToggled="False" 
                        Grid.Row="4"
                        Grid.Column="1"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center"/>

                <Switch x:Name="fridaySwitcher"   
                        Toggled="Switcher_Toggled"
                        IsToggled="False" 
                        Grid.Row="5"
                        Grid.Column="1"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"/>

                <Switch x:Name="saturdaySwitcher" 
                        Toggled="Switcher_Toggled" 
                        IsToggled="False" 
                        Grid.Row="6" 
                        Grid.Column="1"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"/>

                <Switch x:Name="sundaySwitcher"
                        Toggled="Switcher_Toggled"
                        IsToggled="False" 
                        Grid.Row="7" 
                        Grid.Column="1" 
                        VerticalOptions="Center"
                        HorizontalOptions="Center"/>

                <TimePicker x:Name="mondayTime" 
                            Format="HH:mm"  
                            Grid.Row="1" 
                            Grid.Column="2" 
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            IsEnabled="False"
                            PropertyChanged="timeAlarm_PropertyChanged"/>

                <TimePicker x:Name="tuesdayTime" 
                            Format="HH:mm" 
                            Grid.Row="2"
                            Grid.Column="2" 
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            IsEnabled="False"
                            PropertyChanged="timeAlarm_PropertyChanged"/>

                <TimePicker x:Name="wednesdayTime" 
                            Format="HH:mm" 
                            Grid.Row="3"
                            Grid.Column="2"
                            VerticalOptions="Center" 
                            HorizontalOptions="Center"
                            IsEnabled="False"
                            PropertyChanged="timeAlarm_PropertyChanged"/>

                <TimePicker x:Name="thursdayTime"
                            Format="HH:mm" 
                            Grid.Row="4" 
                            Grid.Column="2"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            IsEnabled="False"
                            PropertyChanged="timeAlarm_PropertyChanged"/>

                <TimePicker x:Name="fridayTime"
                            Format="HH:mm" 
                            Grid.Row="5" 
                            Grid.Column="2"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            IsEnabled="False"
                            PropertyChanged="timeAlarm_PropertyChanged"/>

                <TimePicker x:Name="saturdayTime" 
                            Format="HH:mm" 
                            Grid.Row="6"
                            Grid.Column="2" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Center" 
                            IsEnabled="False" 
                            PropertyChanged="timeAlarm_PropertyChanged"/>

                <TimePicker x:Name="sundayTime"
                            Format="HH:mm" 
                            Grid.Row="7" 
                            Grid.Column="2"
                            VerticalOptions="Center"
                            HorizontalOptions="Center" 
                            IsEnabled="False" 
                            PropertyChanged="timeAlarm_PropertyChanged"/>

                <Label Text="Рассвет начинается за" 
                       Grid.Row="8" 
                       Grid.Column="0" 
                       Grid.ColumnSpan="2" 
                       VerticalTextAlignment="Center" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="минут"  
                       Grid.Row="8" 
                       Grid.Column="2" 
                       VerticalTextAlignment="Center" 
                       HorizontalTextAlignment="End" 
                       Margin="0, 0, 40, 0" />

                <Picker  Grid.Row="8" 
                         Grid.Column="2" 
                         WidthRequest="70" 
                         Margin="0, 5, 0, 5"
                         HorizontalOptions="Center"
                         x:Name="sunriseTimePicker" 
                         SelectedIndexChanged="sunriseTimePicker_SelectedIndexChanged">
                    <Picker.Items>
                        <x:String>5</x:String>
                        <x:String>10</x:String>
                        <x:String>15</x:String>
                        <x:String>20</x:String>
                        <x:String>25</x:String>
                        <x:String>30</x:String>
                        <x:String>40</x:String>
                        <x:String>50</x:String>
                        <x:String>60</x:String>
                    </Picker.Items>
                    <Picker.SelectedItem>1</Picker.SelectedItem>
                </Picker>
            </Grid>
        </ContentPage.Content>
    </ContentPage>
</TabbedPage>